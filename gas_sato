function onOpen() {
  let spreadsheet = SpreadsheetApp.getActive();
  var menuItems = [
    {name: 'リストにメール送信', functionName: 'sendMail'}
  ];
  spreadsheet.addMenu('メール送信', menuItems);
}

var today = new Date();
var year = today.getFullYear();
var month = today.getMonth()+1;
var date = today.getDate(); 
